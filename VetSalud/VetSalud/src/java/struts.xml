<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">

        <!-- Página por defecto: redirige a listar -->
        <action name="">
            <result>/listarCitas.jsp</result>
        </action>

        <!-- Acción para crear una cita -->
        <action name="crearCita" class="acciones.CitaAction" method="crear">
            <result name="success">/listarCitas.jsp</result>
            <result name="input">/crearCita.jsp</result>
        </action>

        <!-- Acción para editar una cita -->
        <action name="editarCita" class="acciones.CitaAction" method="editar">
            <result name="success">/listarCitas.jsp</result>
            <result name="input">/editarCita.jsp</result>
        </action>

        <!-- Acción para eliminar una cita -->
        <action name="eliminarCita" class="acciones.CitaAction" method="eliminar">
            <result name="success" type="redirectAction">/listarCitas</result>
        </action>

        <!-- Acción para listar todas las citas -->
        <action name="listarCitas" class="acciones.CitaAction" method="listar">
            <result>/listarCitas.jsp</result>
        </action>
        
        <!-- Acciones Dueno -->
        <action name="crearDueno" class="acciones.DuenoAction" method="crear">
            <result name="success">/listarDuenos.jsp</result>
            <result name="input">/crearDueno.jsp</result>
        </action>

        <action name="editarDueno" class="acciones.DuenoAction" method="editar">
            <result name="success">/listarDuenos.jsp</result>
            <result name="input">/editarDueno.jsp</result>
        </action>

        <action name="eliminarDueno" class="acciones.DuenoAction" method="eliminar">
            <result name="success" type="redirectAction">/listarDuenos</result>
        </action>

        <action name="listarDuenos" class="acciones.DuenoAction" method="listar">
            <result>/listarDuenos.jsp</result>
        </action>

    </package>
</struts>

