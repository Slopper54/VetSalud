<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="listarHistoriasClinicas" class="acciones.HistoriaClinicaAction" method="listarHistoriasClinicas">
            <result name="success">/listarHistorias.jsp</result>
        </action>
        <action name="obtenerHistoriaClinica" class="acciones.HistoriaClinicaAction" method="obtenerHistoriaClinica">
            <result name="success">/datosHistoriaClinica.jsp</result>
        </action>
        <action name="crearHistoriaClinica" class="acciones.HistoriaClinicaAction" method="crearHistoriaClinica">
            <result name="success">/prueba.jsp</result>
        </action>
        <action name="borrarHistoriaClinica" class="acciones.HistoriaClinicaAction" method="eliminarHistoriaClinica">
            <result name="success">/prueba.jsp</result>
        </action>
        <action name="actualizarHistoriaClinica" class="acciones.HistoriaClinicaAction" method="actualizarHistoriaClinica">
            <result name="success">/prueba.jsp</result>
        </action>
        <action name="listarFacturas" class="acciones.FacturaAction" method="listarFacturas">
            <result name="success">/listarFacturas.jsp</result>
        </action>
        <action name="obtenerFactura" class="acciones.FacturaAction" method="obtenerFactura">
            <result name="success">/datosFactura.jsp</result>
        </action>
        <action name="crearFactura" class="acciones.FacturaAction" method="crearFactura">
            <result name="success">/prueba.jsp</result>
            <result name="error">/prueba.jsp</result>
        </action>
        <action name="borrarFactura" class="acciones.FacturaAction" method="eliminarFactura">
            <result name="success">/prueba.jsp</result>
        </action>
        <action name="actualizarFactura" class="acciones.FacturaAction" method="actualizarFactura">
            <result name="success">/prueba.jsp</result>
            <result name="error">/prueba.jsp</result>
        </action>
        <action name="inicio">
            <result name="success">prueba.jsp</result>
        </action>
    </package>
</struts>
