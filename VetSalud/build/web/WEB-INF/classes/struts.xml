            <result name="error">/error.jsp</result>
        </action>
        
        <action name="filtrarVeterinario" class="actions.VeterinarioAction" method="filter">
            <result name="success">/Veterinario.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
    </package>
    
    
</struts>
